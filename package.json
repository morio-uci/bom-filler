{
  "name": "bom-filler",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "knex": "^0.20.9",
    "octopart": "github:jorisa/octopart",
    "pg": "^7.18.1",
    "react": "^16.8.6",
    "react-datasheet": "^1.4.0",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.3.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-spawn": "^6.0.5",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "start": "bash bin/dev.sh",
    "build": "react-scripts build",
    "test-react": "react-scripts test",
    "eject-www": "react-scripts eject",
    "make-db": "while read -r line; do export $line; done < .env; dropdb $POSTGRES_DB; createdb $POSTGRES_DB",
    "make-test-db": "while read -r line; do export $line; done < .env; dropdb $POSTGRES_TEST_DB; createdb $POSTGRES_TEST_DB",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "test-seed": "npm run seed -- --env=test",
    "reset-db": "npm run make-db; npm run migrate; npm run seed",
    "reset-test-db": "npm run make-test-db; npm run migrate -- --env=test; npm run test-seed",
    "test": "NODE_ENV=test mocha --exit -r esm",
    "db-test": "npm run reset-test-db; npm run test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:4000"
}
